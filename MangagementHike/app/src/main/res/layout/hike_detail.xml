<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSecondary"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_background"
        tools:srcCompat="@tools:sample/avatars" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_id"
            android:text="Hike ID:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_name"
            android:text="Name: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_location"
            android:text="Location"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_date_of_hike"
            android:text="Date Of Hike: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_parking_available"
            android:text="Parking Available: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_length_the_hike"
            android:text="Length The Hike: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/level_of_difficulty"
            android:text="Level Of Difficulty: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_description"
            android:text="Description: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
<!--        <TextView-->
<!--            android:id="@+id/tv_risk_assessment"-->
<!--            android:text="Risk Assessment: "-->
<!--            android:textSize="20dp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/colorTextPrimary"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
        <TextView
            android:id="@+id/tv_vehicle"
            android:text="Vehicle: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
<!--        <TextView-->
<!--            android:id="@+id/tv_estimated_time"-->
<!--            android:text="Estimated Time: "-->
<!--            android:textSize="20dp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/colorTextPrimary"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->
    </LinearLayout>
</LinearLayout>